<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/hinh"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/sach1" />
    <TextView
        android:id="@+id/tensp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kiểm soát và quản lý nhà cung cáp"
        android:textStyle="bold"
        android:layout_below="@+id/hinh"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/gia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tensp"
        android:layout_centerHorizontal="true"
        android:text="300.000 đ"
        android:textColor="@color/hwid_auth_button_color_red"
        android:textStyle="bold" />


</RelativeLayout>